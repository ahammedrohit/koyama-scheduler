<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark theme implementation that follows Material Design guidelines -->
    <style name="Theme.KoyamaScheduler" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_dark</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="colorError">@color/error_dark</item>
        <item name="colorOnError">@color/on_error_dark</item>
        
        <!-- Material You night attributes -->
        <item name="colorPrimaryContainer">@color/primary_container_dark</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container_dark</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_dark</item>
        
        <!-- Action Bar and popups -->
        <item name="actionBarPopupTheme">@style/ThemeOverlay.MaterialComponents.Dark</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.KoyamaScheduler.Dark.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.KoyamaScheduler.Dark.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.KoyamaScheduler.Dark.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.KoyamaScheduler.Dark.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.KoyamaScheduler.Dark.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.KoyamaScheduler.Dark.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.KoyamaScheduler.Dark.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.KoyamaScheduler.Dark.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.KoyamaScheduler.Dark.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.KoyamaScheduler.Dark.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.KoyamaScheduler.Dark.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.KoyamaScheduler.Dark.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.KoyamaScheduler.Dark.Overline</item>
        
        <!-- Card and component styling -->
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/card_background_dark</item>
        
        <!-- Material shapes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.KoyamaScheduler.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.KoyamaScheduler.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.KoyamaScheduler.LargeComponent</item>
    </style>
</resources>