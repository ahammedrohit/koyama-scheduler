<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark Mode Text Appearance Styles -->
    <style name="TextAppearance.KoyamaScheduler.Dark.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">96sp</item>
        <item name="android:letterSpacing">-0.015</item>
    </style>
    
    <style name="TextAppearance.KoyamaScheduler.Dark.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">60sp</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
    
    <style name="TextAppearance.KoyamaScheduler.Dark.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">48sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.KoyamaScheduler.Dark.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.KoyamaScheduler.Dark.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.KoyamaScheduler.Dark.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.KoyamaScheduler.Dark.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.KoyamaScheduler.Dark.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextAppearance.KoyamaScheduler.Dark.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>
    
    <style name="TextAppearance.KoyamaScheduler.Dark.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="TextAppearance.KoyamaScheduler.Dark.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>
    
    <style name="TextAppearance.KoyamaScheduler.Dark.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TextAppearance.KoyamaScheduler.Dark.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">@color/text_secondary_dark</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <!-- Chip style for dark mode -->
    <style name="Widget.KoyamaScheduler.Chip.Dark" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/surface_dark</item>
        <item name="chipStrokeColor">@color/primary_dark</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
    
    <!-- Card style for dark mode -->
    <style name="Widget.KoyamaScheduler.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface_dark</item>
        <item name="cardCornerRadius">12dp</item>
    </style>
    
    <!-- Base Widget Style for dark mode -->
    <style name="Widget.KoyamaScheduler" parent="@android:style/Widget">
        <!-- Base attributes for all Koyama Scheduler widgets in dark mode -->
    </style>
    
    <!-- Style for lesson number in dark mode -->
    <style name="Widget.KoyamaScheduler.LessonNumber.Dark">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textColor">@color/on_primary_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
</resources> 