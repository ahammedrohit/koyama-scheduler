<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    tools:context=".ui.AbbreviationsGuideActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/abbreviations_guide"
            app:titleTextColor="?attr/colorOnPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/abbreviations_title"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/abbreviations_description"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginBottom="24dp" />

            <!-- AT - Automatic Transmission -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="AT"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/lesson_at"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Automatic Transmission"
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:textColor="?attr/colorOnBackground"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Basic driving with automatic transmission"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?attr/colorOnBackground" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- A50 - Advanced 50 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_a50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="A50"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/lesson_a50"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Advanced 50"
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:textColor="?attr/colorOnBackground"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_description_a50"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="50-minute extended training session"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?attr/colorOnBackground" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ATP - Automatic Transmission Parking -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_atp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="ATP"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/lesson_atp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Automatic Transmission Parking"
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:textColor="?attr/colorOnBackground"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_description_atp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Parking practice with automatic transmission"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?attr/colorOnBackground" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- PT - Practice Test -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="PT"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/lesson_pt"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Practice Test"
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:textColor="?attr/colorOnBackground"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_description_pt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Simulated test environment to prepare for examination"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?attr/colorOnBackground" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Add the rest of the abbreviations here -->
            <!-- CPR - Cardio Pulmonary Resuscitation -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_cpr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="CPR"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/lesson_cpr"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cardio Pulmonary Resuscitation"
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:textColor="?attr/colorOnBackground"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_description_cpr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Emergency response training"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?attr/colorOnBackground" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- APTIT - Aptitude Test -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_aptit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="APTIT"
                        android:textSize="14sp"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/lesson_aptit"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Aptitude Test"
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:textColor="?attr/colorOnBackground"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_description_aptit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Assessment of driving aptitude and capabilities"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?attr/colorOnBackground" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CDD - Combination of a driving lesson and discussion -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_cdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="CDD"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/lesson_cdd"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Combination of a driving lesson and discussion"
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:textColor="?attr/colorOnBackground"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_description_cdd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="In-depth lesson combining practice and theory"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?attr/colorOnBackground" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- EX&RD - Expressway and Route determination -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_exrd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="EX&amp;RD"
                        android:textSize="14sp"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/lesson_exrd"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Expressway and Route determination"
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:textColor="?attr/colorOnBackground"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_description_exrd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Highway driving and navigation"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?attr/colorOnBackground" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- APS - Special item lesson -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_aps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="APS"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/lesson_aps"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Special item lesson"
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:textColor="?attr/colorOnBackground"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_description_aps"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Advanced maneuvers and specialized techniques"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?attr/colorOnBackground" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- EXT - Extra lesson -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_ext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="EXT"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/lesson_ext"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Extra lesson"
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:textColor="?attr/colorOnBackground"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_description_ext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Additional practice hours (¥4,950/hr)"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?attr/colorOnBackground" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout> 